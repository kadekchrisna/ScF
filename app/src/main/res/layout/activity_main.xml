<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textSize="30dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="35dp"/>

    <EditText
        android:id="@+id/inputSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textSearch"
        android:hint="Search Here"
        android:background="@drawable/search_outline"
        android:layout_alignStart="@id/textSearch"
        android:layout_toLeftOf="@id/butonSearch"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        />

    <ImageButton
        android:id="@+id/butonSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/inputSearch"
        android:layout_alignTop="@id/inputSearch"
        android:layout_below="@id/textSearch"
        android:layout_marginStart="8dp"
        android:src="@android:drawable/ic_search_category_default"
        android:background="#ffffff"
        android:layout_alignEnd="@id/textSearch"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/inputSearch"
        android:layout_marginTop="16dp"
        />


</RelativeLayout>